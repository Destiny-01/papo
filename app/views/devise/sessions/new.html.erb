<div class="card"><h2 class="card-header text-center">Log In</h2>
  <div class="card-body">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<br>

<%= render "devise/shared/links" %>
<%=link_to 'Sign Up', new_user_registration_path, class: "btn btn-secondary"%> | 
<%=button_to 'Forgot Password', user_password_path, class: "btn btn-dark" %>

